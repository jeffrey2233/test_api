{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/pytest.exe",
            "args": [
                "tests",
                "-s", "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
